@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <h1>Welcome to the<br>City of Cape Town<br>Municipal Services Portal</h1>
        <p>Your gateway to municipal services, community engagement, and local governance. Report issues, stay informed about events, and track service requests all in one place.</p>
        <div class="hero-buttons">
            <a href="@Url.Action("ReportIssues", "Home")" class="btn btn-primary btn-hero">📝 Report an Issue</a>
            <a href="@Url.Action("ServiceRequestStatus", "Home")" class="btn btn-secondary btn-hero">📊 Check Status</a>
        </div>
    </div>
</div>

<!-- Service Cards -->
<div class="service-cards-section">
    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <a href="@Url.Action("ReportIssues", "Home")" style="text-decoration: none; color: inherit;">
                <div class="service-card service-card-blue">
                    <div class="service-card-icon">📝</div>
                    <h3>Report Issues</h3>
                    <p>Report municipal issues in your area</p>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-md-6">
            <a href="@Url.Action("LocalEvents", "Home")" style="text-decoration: none; color: inherit;">
                <div class="service-card service-card-green">
                    <div class="service-card-icon">📅</div>
                    <h3>Local Events</h3>
                    <p>Stay informed about community events</p>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-md-6">
            <a href="@Url.Action("ServiceRequestStatus", "Home")" style="text-decoration: none; color: inherit;">
                <div class="service-card service-card-purple">
                    <div class="service-card-icon">📋</div>
                    <h3>Service Status</h3>
                    <p>Check the status of your requests</p>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Service Impact Section -->
<div class="service-impact-section">
    <div class="impact-card">
        <h2 class="mb-5 text-center">Service Impact</h2>
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="impact-item">
                    <div class="impact-icon">📊</div>
                    <div class="impact-number">1,247</div>
                    <div class="impact-label">Issues Resolved This Month</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="impact-item">
                    <div class="impact-icon">👥</div>
                    <div class="impact-number">8,932</div>
                    <div class="impact-label">Active Community Members</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="impact-item">
                    <div class="impact-icon">📍</div>
                    <div class="impact-number">156</div>
                    <div class="impact-label">Service Areas Covered</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="impact-item">
                    <div class="impact-icon">⏱️</div>
                    <div class="impact-number">2.3 days</div>
                    <div class="impact-label">Average Response Time</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Emergency Services Section -->
<div class="emergency-section">
    <div class="emergency-card">
        <div class="emergency-header">
            <h2>📞 Emergency Services</h2>
        </div>
        <div class="row text-center">
            <div class="col-lg-4 col-md-4">
                <div class="emergency-item">
                    <h4>Police</h4>
                    <div class="emergency-number">10111</div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="emergency-item">
                    <h4>Fire & Rescue</h4>
                    <div class="emergency-number">021 480 7700</div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="emergency-item">
                    <h4>Medical Emergency</h4>
                    <div class="emergency-number">10177</div>
                </div>
            </div>
        </div>
    </div>
</div>
