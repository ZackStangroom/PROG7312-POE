<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - City of Cape Town</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG7312_POE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon">📍</div>
                    <div class="brand-text">
                        <div class="brand-title">City of Cape Town</div>
                        <div class="brand-subtitle">Municipal Services</div>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="nav-icon">🏠</span> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ReportIssues">
                                <span class="nav-icon">📝</span> Report Issues
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="nav-icon">📅</span> Local Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="nav-icon">📊</span> Service Status
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Contact Information</h5>
                    <div class="footer-content">
                        <p><strong>City of Cape Town</strong></p>
                        <p>Civic Centre, 12 Hertzog Boulevard<br>Cape Town, 8001</p>
                        <p>Tel: +27 21 400 1111</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Emergency Services</h5>
                    <div class="footer-content">
                        <p>Police: 10111</p>
                        <p>Fire & Rescue: 021 480 7700</p>
                        <p>Medical Emergency: 10177</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>Office Hours</h5>
                    <div class="footer-content">
                        <p>Monday - Friday: 8:00 - 16:30</p>
                        <p>Saturday: 8:00 - 12:00</p>
                        <p>Sunday: Closed</p>
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; 2025 City of Cape Town - All rights reserved</p>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
